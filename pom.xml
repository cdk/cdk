    <!-- Plugin repository (EBI) is required for cdk-build-utils and
         ojdcheck to build the javadoc. -->
    <pluginRepositories>
        <pluginRepository>
            <id>ebi-repo</id>
            <name>EBI Maven Repository</name>
            <url>
                http://www.ebi.ac.uk/intact/maven/nexus/content/repositories/ebi-repo/
            </url>
            <releases>
                <enabled>true</enabled>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </pluginRepository>
    </pluginRepositories>


